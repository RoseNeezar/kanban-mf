{
  "name": "@kanban-server/root",
  "private": true,
  "scripts": {
    "start:dev": "lerna run --scope @kanban-server/* --parallel start:dev",
    "start:dev-kanban": "lerna run --scope @kanban-server/kanban-service --parallel start:dev",
    "build:gateway": "lerna run --scope @kanban-server/* --ignore @kanban-server/kanban-service --parallel build",
    "build:kanban": "lerna run --scope @kanban-server/kanban-service --parallel build",
    "start:prod:gateway": "lerna run --scope @kanban-server/* --ignore @kanban-server/kanban-service --parallel start",
    "start:prod:kanban": "lerna run --scope @kanban-server/kanban-service --parallel start",
    "serve": "lerna run --scope @kanban-server/* --parallel serve",
    "clean": "lerna run --scope @kanban-server/* --parallel clean",
    "lint": "lerna run --scope @kanban-server/* lint",
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "add:gateway": "lerna --scope @kanban-server/gateway-service add",
    "add:task": "lerna --scope @kanban-server/kanban-service add",
    "add:all": "lerna add"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
